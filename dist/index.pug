mixin link(href, name)
  a(class!=attributes.class href=href)= name 
mixin menu-item(href, name)
  li.header-item
    a(class="header-link", href=href)=name
mixin about-list(title, content)
  li 
    h3.about-title= title 
    p.about-desc= content 
mixin priority-list(title, content, name, position)
  li 
    h3.priority-list-title= title 
    p.priority-list-desc= content 
    h4.priority-list-name= name 
    p.priority-list-position= position 
mixin services-menu(href, name)
  li 
    a(class='menu-link', href=href)= name
mixin services-content(img, alt, title, desc, name, position)
  li 
