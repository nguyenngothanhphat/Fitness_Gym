mixin link(href, name)
  a(class!=attributes.class href=href)= name 
mixin generic-list(img, alt, title, desc)
  li 
    figure.generic-img 
      img(src=img, alt=alt)
    h2.generic-list-title= title 
    p.generic-list-desc= desc 
mixin portfolio-item(img, alt, title, desc)
  li 
    figure.portfolio-img 
      img(src=img, alt=alt, class="portfolio-image")
      .overlay 
        img(src="./images/search-icon.png", alt="search-icon")
        h3.overlay-title View More
    h3.portfolio-title= title 
    p.portfolio-desc= desc 
mixin footer-item(img, alt, title, type, info)
  li 
    img(src=img, alt=alt)(class = "footer-item-icon")
    h3.footer-item-title= title 
    a(href=type, class="footer-item-info")= info
